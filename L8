#include "pch.h"
#include <iostream>
#include <stdlib.h>
#define SIZE 10

int show_values(int *t) {
	int elements = SIZE;
	for (int i = 0; i < elements; i++) {
		printf_s("%d. %d\n", i + 1, t[i]);
	}

	return 0;
}

int add(int *t) {
	int elements = SIZE;
	int sum = 0;
	for (int i = 0; i < elements; i++) {
		sum += t[i];
	}

	return sum;
}

int average(int *t) {
	int elements = SIZE;
	return add(t) / elements;
}

int min(int *t) {
	int elements = SIZE;
	int min = t[0];
	for (int i = 0; i < elements; i++) {
		if (min > t[i]) {
			min = t[i];
		}
	}

	return min;
}

int max(int *t) {
	int elements = SIZE;
	int max = t[0];
	for (int i = 0; i < elements; i++) {
		if (max < t[i]) {
			max = t[i];
		}
	}

	return max;
}

int *add_tabs(int *t, int *t2) {
	int elements = SIZE;
	int *tr = (int *)malloc(sizeof(int)*elements);

	for (int i = 0; i < elements; i++) {
		tr[i] = t[i] + t2[i];
	}

	return tr;
}

int *get_data() {
	int elements = SIZE;
	int *tab = (int *)malloc(sizeof(int)*elements);

	int liczba;
	for (int i = 0; i < elements; i++) {
		tab[i] = tab[i] = 12-i;
	}
	return tab;
	free(tab);
}



int main()
{

	int elements=10;

	show_values(get_data());
	printf_s("Dodawanie: %d\n", add(get_data()));
	printf_s("Srednia: %d\n", average(get_data()));
	printf_s("Min: %d\n", min(get_data()));
	printf_s("Max: %d\n", max(get_data()));

	show_values(add_tabs(get_data(), get_data()));

}
