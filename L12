#include "pch.h"
#include <iostream>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>

void ShowMap(char map[9][9]) {
	for (int i = 0; i < 9; i++) {
		for (int j = 0; j < 9; j++) {
			printf_s(" %c", map[i][j]);
		}
		printf("\n");
	}
}

void CreateMap(char map[9][9]) {
	for (int i = 0; i < 9; i++) {
		for (int j = 0; j < 9; j++) {
			map[i][j] = { '.' };
			if (i == 0 && j == 0) {
				map[i][j] = 'X';
			}
			else if (i == 0) {
				map[i][j] = toupper('0' + j+48);
			}
			else if (j == 0) {
				map[i][j] = '0' + i;
			}
		}
	}
}

void CreatePlayers(char map[9][9]) {
	for(int i = 1;  i < 3; i++) {
		for (int j = 1; j < 9; j++) {
			if (i == 2) {
				map[i][j] ='p';
			}

		}
	}
	for (int i = 7; i < 9; i++) {
		for (int j = 1; j < 9; j++) {
			if (i == 7) {
				map[i][j] = 'P';
			}
		}
	}
}

void canMove() {
	
}

int main()
{
	char plansza[9][9];

	CreateMap(plansza);
	CreatePlayers(plansza);
	ShowMap(plansza);


	return 0;
}

